<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/call_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/call_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/video_time"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="120dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/call_hangup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:src="@mipmap/hangup"
        android:layout_gravity="bottom|start"
        app:borderWidth="0.0dip"
        app:fabSize="normal"
        app:backgroundTint="@color/colorHangup"
        app:layout_anchorGravity="bottom|right"
        android:scaleType="center"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/call_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:src="@mipmap/answer"
        android:layout_gravity="bottom|end"
        app:borderWidth="0.0dip"
        app:fabSize="normal"
        app:backgroundTint="@color/colorAnswer"
        app:layout_anchorGravity="bottom|left"
        android:scaleType="center"/>

</android.support.design.widget.CoordinatorLayout>