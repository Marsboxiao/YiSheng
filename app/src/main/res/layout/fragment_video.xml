<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGray">

    <com.zty.yisheng.common.view.VideoGroupView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|bottom"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/video_hangup"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:src="@mipmap/hangup"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/video_down"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:src="@mipmap/down"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_contraller"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/video_state"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/video_sick"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/video_sick"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/jinrua"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginEnd="10dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/video_suspension"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/video_location"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/jinrua"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginEnd="10dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/video_video"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/video_video"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical">
                    <Button
                        android:id="@+id/video_videobutton"
                        android:layout_width="36dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/on"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/video_loading"
            android:textSize="28sp"
            android:gravity="center"/>
    </LinearLayout>

</FrameLayout>